<div class="row">
	<div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Icon</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
        <%  if (typeof services != 'undefined' && services.length>0) {
                for (i=0; i<services.length; i++){ %>
              <tr>
                <td><%=services[i].name %></td>
                <td><%=services[i].description %></td>
                <td><%=services[i].iconUrl %></td>
                <td><a class="btn btn-success" href="/admin/services/add?id=<%=services[i]._id %>">Edit</a>
                    <a class="btn btn-danger" href="/admin/services/delete?id=<%=services[i]._id %>">Delete</a></td>
              </tr>
                
        <%      }
            } else { %> 
              <tr>
                  <td colspan=4>No Services found ...</td>
              </tr>
        <%  } %>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
	<div class="col-md-12">
        <a class="btn btn-primary" href="/admin/services/add">Create New Service</a>
    </div>
</div>


