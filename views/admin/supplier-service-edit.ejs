<div class="row">
	<div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><%=suppliercompany%></div>
            <div class="panel-body">
              <ul class="list-group list-group-flush">
                <% if (supplieraddress) { %> 
                    <li class="list-group-item card-text"><%=supplieraddress%></li>
                <%}%>
                <% if (supplierpostcode) { %> 
                    <li class="list-group-item">Postcode: <%=supplierpostcode%></li>
                <%}%>
              </ul>
            </div>
        </div>
    </div>
	<div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">Contact Details</div>
            <div class="panel-body">
              <ul class="list-group list-group-flush">
                <% if (suppliermobile) { %> 
                    <li class="list-group-item">Mobile: <%=suppliermobile%></li>
                <%}%>
                <% if (supplieremail) { %> 
                    <li class="list-group-item">Email: <%=supplieremail%></li>
                <%}%>
              </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
	<div class="col-md-12">
        <form method="post" role="form" class="form-horizontal" id="thisform">
        <div class="form-group">
          <label class="control-label col-sm-3" for="clientId"></label>
          <div class="col-sm-9">
            <h2 class="center-block ">
                <% if (type == 'add') { %>
                    Subscribe New Service 
                <% } else if (typeof id != 'undefined'){ %>
                    Edit Subscription of Service
                    <input type="hidden" name="id" value="<%=id %>">
                    <input type="hidden" name="access_token" id="access_token" value="<%=req.session.accessToken %>">
                <% } %>
            </h2>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="service">Service:</label>
          <div class="col-sm-9">
              <select class="form-control" id="service" name="service">
                  <option value="">Select Service</options>
                  <% if (typeof services != 'undefined') { 
                         for(var i=0; i<services.length; i++) { 
                             if (service.toString() == services[i]._id) { %>
                                 <option value="<%=services[i]._id%>" selected><%=services[i].name %></option>
                         <%  } else { %>
                                 <option value="<%=services[i]._id%>"><%=services[i].name %></option>
                         <%  }
                         }
                     } %>
              </select>
              
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="address">Address:</label>
          <div class="col-sm-9">
            <textarea class="form-control" id="address" rows="3" name="address" placeholder="Enter Address" ><%=address%></textarea>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="postcode">Postcode:</label>
          <div class="col-sm-9">
            <input type="email" class="form-control" id="postcode" name="postcode" placeholder="Enter Postcode" value="<%=postcode%>">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="lattitude">Longitude:</label>
          <div class="col-sm-9">
            <input type="email" class="form-control" id="longitude" name="longitude" placeholder="Enter Longitude" value="<%=location[0]%>">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="lattitude">Lattitude:</label>
          <div class="col-sm-9">
            <input type="email" class="form-control" id="lattitude" name="lattitude" placeholder="Enter Lattitude" value="<%=location[1]%>">
          </div>
        </div>
        <div class="form-group">        
          <div class="col-sm-offset-3 col-sm-9">
            <button type="button" class="btn btn-primary" id="find-geocode" onclick="updateServiceGeocode()">Find Coordinates from Address</button>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="radius">Radius of Service:</label>
          <div class="col-sm-9">
            <input type="email" class="form-control" id="radius" name="radius" placeholder="Enter Radius of Service" value="<%=radius%>">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="unit">Unit of Radius:</label>
          <div class="col-sm-9">
                <label class="radio-inline">
                    <% if (unit == 'miles' || unit == '') { %>
                        <input type="radio" name="unit" value="miles" checked>Miles
                    <% } else { %>
                        <input type="radio" name="unit" value="miles">Miles
                    <% } %>
                </label>
                <label class="radio-inline">
                    <% if (unit == 'kms') { %>
                        <input type="radio" name="unit" value="kms" checked>Kilometers
                    <% } else { %>
                        <input type="radio" name="unit" value="kms">Kilometers
                    <% } %>
                </label>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="unit">Service Status:</label>
          <div class="col-sm-9">
                <label class="checkbox-inline">
                    <% if (enabled) { %>
                        <input type="checkbox" name="enabled" value="true" checked="checked">Enabled
                    <% } else { %>
                        <input type="checkbox" name="enabled" value="true">Enabled
                    <% } %>
                </label>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-3" for="state">State:</label>
          <div class="col-sm-9">
              <select class="form-control" id="state" name="state">
                  <option value="">Select State</options>                       
                    <% if (state == 'email') { %>
                        <option value="email" selected>Email Only</option> 
                    <% } else { %>
                        <option value="email">Email Only</option> 
                    <% } %>
                    <% if (state == 'active') { %>
                        <option value="active" selected>Active Recently</option> 
                    <% } else { %>
                        <option value="active">Active Recently</option> 
                    <% } %>
                    <% if (state == 'inactive') { %>
                        <option value="inactive" selected>Inactive</option> 
                    <% } else { %>
                        <option value="inactive">Inactive</option> 
                    <% } %>
              </select>
          </div>
        </div>
        <div class="form-group">        
          <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-danger" href="/admin/suppliers/services?id=<%=supplierid%>">Cancel</a>
            
          </div>
        </div>
        </form>
    </div>
</div>
